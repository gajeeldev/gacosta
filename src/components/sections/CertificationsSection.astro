---
import {certifications} from '../../data/certifications'
---

<section
	class='flex flex-col items-center mt-20 w-full mx-auto max-w-5xl'
	id='certifications'
>
	<h2 class='text-2xl font-bold mb-8 text-center'>Certificaciones</h2>
	<div class='grid grid-cols-1 md:grid-cols-3 gap-4'>
		{
			certifications.map((certification) => (
				<a
					href={certification.credentialUrl}
					target="_blank"
					class='block rounded-md border border-gray-300 p-4 shadow-sm sm:p-6 bg-white dark:bg-[#2e2e2e] hover:shadow-md shadow-gray-400 transition duration-300'
				>
					<div class='sm:flex'>
						<div class='sm:order-last'>
							<certification.logo />
						</div>

						<div class='mt-4 sm:mt-0'>
							<h3 class='text-md font-medium text-[#252525] dark:text-[#F5F5F5] text-balance'>
								{certification.title}
							</h3>

							<p class='mt-1 text-sm text-gray-700 dark:text-gray-200'>
								{certification.issuer}
							</p>
							<p class='mt-1 text-sm text-gray-700 dark:text-gray-200'>
								{certification.date}
							</p>

							<p class='mt-2 text-xs text-pretty text-gray-700 dark:text-gray-200'>
								{certification.description}
							</p>
						</div>
					</div>
				</a>
			))
		}
	</div>
</section>
