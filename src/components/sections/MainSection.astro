---
import Avatar from '../Avatar.astro'
import DownloadIcon from '../Icons/DownloadIcon.astro'
import GithubIcon from '../Icons/GithubIcon.astro'
import LinkedinIcon from '../Icons/LinkedinIcon.astro'
---

<section
	class='flex flex-col justify-center min-h-[35rem] w-full mx-auto max-w-5xl'
	id='home'
>
	<!-- name & image -->
	<div class='flex flex-col md:flex-row justify-between items-center'>
		<div class='flex flex-col md:items-start items-center'>
			<span>Hola ðŸ‘‹, soy</span>
			<h1 class='font-bold text-7xl text-center md:text-start py-3'>
				Gilberto Acosta
			</h1>
			<span class='font-medium text-xl'>Desarrollador Frontend</span>
		</div>

		<div class='w-72 h-72 bg-white dark:bg-gray-800 rounded-full flex justify-center items-center overflow-hidden pt-5'>
			<Avatar />
		</div>
	</div>
	<!-- social & cv -->
	<div class='flex flex-col md:flex-row items-center gap-3 mt-5'>
		<a
			class='px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md flex items-center gap-2 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors'
			target='_blank'
			href='https://github.com/gajeeldev'
		>
			<span>GitHub</span>
			<GithubIcon />
		</a>
		<a
			class='px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md flex items-center gap-2 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors'
			target='_blank'
			href='https://www.linkedin.com/in/gacosta09/'
		>
			<span>LinkedIn</span>
			<LinkedinIcon />
		</a>
		<a
			class='px-4 py-2 border border-gray-300 dark:border-gray-700 rounded-md flex items-center gap-2 hover:bg-gray-100 dark:hover:bg-gray-800 transition-colors'
			target='_blank'
			href='https://drive.google.com/file/d/15PjE82_4212b3WuywsBSN4B90r0z11Da/view?usp=sharing'
		>
			<span>Descargar CV</span>
			<DownloadIcon />
		</a>
	</div>
</section>
