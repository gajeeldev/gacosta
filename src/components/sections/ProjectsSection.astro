---
import ProjectCard from '../ProjectCard.astro'

import {projects} from '../../data/projects'
---

<section
	class='flex flex-col items-center mt-20 w-full mx-auto max-w-5xl'
	id='projects'
>
	<h2 class='text-2xl font-bold mb-8 text-center'>Proyectos</h2>

	<div
		class={`grid gap-4 px-5 md:px-0 ${projects.length === 3 ? 'md:grid-cols-3' : 'md:grid-cols-2'}`}
	>
		{
			projects.map((project) => (
				<ProjectCard
					title={project.title}
					body={project.body}
					img={project.img}
					href={project.href}
				/>
			))
		}
	</div>
</section>
