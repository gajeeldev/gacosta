---
const { isMobile = false } = Astro.props;
---

{
  isMobile ? (
    <button
      id="theme-toggle-mobile"
      class="w-full h-full flex items-center justify-center"
      aria-label="Cambiar tema"
    >
      <svg
        id="theme-icon-mobile-sun"
        class="h-5 w-5 hidden dark:block text-yellow-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <!-- Sun icon -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
        />
      </svg>
      <svg
        id="theme-icon-mobile-moon"
        class="h-5 w-5 block dark:hidden text-gray-800"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <!-- Moon icon -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"
        />
      </svg>
    </button>
  ) : (
    <button
      id="theme-toggle"
      class="rounded-full p-2 transition-colors hover:bg-gray-100 dark:hover:bg-gray-800"
      aria-label="Cambiar tema"
    >
      <svg
        id="theme-icon-sun"
        class="h-5 w-5 hidden dark:block text-yellow-400"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <!-- Sun icon -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
        />
      </svg>
      <svg
        id="theme-icon-moon"
        class="h-5 w-5 block dark:hidden text-gray-800"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <!-- Moon icon -->
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M21 12.79A9 9 0 1111.21 3 7 7 0 0021 12.79z"
        />
      </svg>
    </button>
  )
}

<script>
import { setupThemeToggle } from "../utils/changeTheme";

  setupThemeToggle('theme-toggle');
  setupThemeToggle('theme-toggle-mobile');
</script>